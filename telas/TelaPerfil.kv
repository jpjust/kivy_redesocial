#:include telas/widgets_config.kv

################################################################################
# Tela de Perfil
################################################################################
<TelaPerfil>:
    lb_login: lb_login
    lb_nome: lb_nome

    ScrollView:
        
        BoxLayout:

            Label:
                id: lb_login
                font_size: '25sp'

            Label:
                id: lb_nome

            Button:
                text: 'Editar perfil'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'editarperfil'
                    root.manager.current_screen.txt_nome.text = lb_nome.text

            Button:
                text: 'Sair'
                on_press: root.sair()
