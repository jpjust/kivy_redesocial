#:include telas/widgets_config.kv

################################################################################
# Tela de Cadastro
################################################################################
<TelaCadastro>:
    lb_msg: lb_msg

    ScrollView:
        
        BoxLayout:

            Label:
                text: '[b]Cadastro de usu√°rio[/b]\n'
                font_size: '32sp'
                
            Label:
                text: 'Login:'

            TextInput:
                id: txt_login

            Label:
                text: 'Senha:'

            TextInput:
                id: txt_senha1
                password: True

            Label:
                text: 'Repita a senha:'

            TextInput:
                id: txt_senha2
                password: True

            Label:
                text: 'Nome:'

            TextInput:
                id: txt_nome

            Label:
                id: lb_msg
                
            Button:
                text: 'Cadastrar'
                on_press: root.enviar(txt_login.text, txt_senha1.text, txt_senha2.text, txt_nome.text)
                
            Button:
                text: 'Voltar ao login'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'login'
